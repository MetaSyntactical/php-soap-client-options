<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude(['vendor'])
    ->in(__DIR__)
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony' => true,
        '@PhpCsFixer' => true,
        'array_syntax' => ['syntax' => 'short'],
        'concat_space' => ['spacing' => 'one'],
        'heredoc_indentation' => true,
        'single_line_comment_style' => [],
        'final_class' => true,
    ])
    ->setRiskyAllowed(true)
    ->setFinder($finder)
;
